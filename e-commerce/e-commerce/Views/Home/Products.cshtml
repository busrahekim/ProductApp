<div class="text-center">
    <h1 class="myproducts">Products</h1>
</div>
<div class="row">
    @foreach(var i in Model){
    <div class="col-xl-4 col-md-6 col-12 mt-4">   
          <div class="card border-secondary mb-3" style="max-width: 18rem;">
                <div class="card-title">
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;@i.productCategory / @i.productTag  <b style="float:right;">@i.productCreatedAt&nbsp;</b>
                </div>
                <div class="card-body">
                    <h3>@i.productName</h3>
                </div>
                <div class="card-footer">
                    <b>Stock:</b> @i.productQuantity
                    <b style="float:right;">@i.productPrice $</b>
                </div>
          </div>
    </div>
    }
</div>

